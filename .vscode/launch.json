{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tests in Container",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/debug-container-test.js",
      "args": ["test", "--debug"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug Test Coverage in Container",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/debug-container-test.js",
      "args": ["test:coverage", "--debug"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug Native Tests in Container",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/container-test.js",
      "args": ["npm run build:native && node -e \"console.log('Native module loaded successfully');\""],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Attach to Container Node Process",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug Container with Inspector",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/container-test.js",
      "args": ["node --inspect=0.0.0.0:9229 ./node_modules/.bin/vitest run"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "port": 9229
    },
    {
      "name": "Debug Vitest Directly (Local)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": ["run", "--reporter=verbose"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "VITEST": "true"
      },
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "autoAttachChildProcesses": true
    },
    {
      "name": "Debug Container Test Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/container-test.js",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Test Suite",
      "configurations": [
        "Debug Tests in Container"
      ],
      "stopAll": true
    }
  ]
}